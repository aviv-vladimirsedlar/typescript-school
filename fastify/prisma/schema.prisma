generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  firstName String?
  lastName  String?
  password  String

  movies    Movie[] // Renamed to "movies" for clarity
}

model Movie {
  id          String @id @default(cuid())
  description String
  duration    Int
  title       String @unique
  year        Int

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
}
